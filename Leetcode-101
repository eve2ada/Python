# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution(object):
    def isSymmetric(self, root):
        """
        :type root: TreeNode
        :rtype: bool
        """
        if not root:
            return True
        elif root.left == root.right == None:
            return True
        elif None in [root.left, root.right]:
            return False
        elif root.left.val != root.right.val:
            return False
        else:
            return self.isSymmetric(root.left) and self.isSymmetric(root.right)
